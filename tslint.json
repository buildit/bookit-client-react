{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [ true, "never" ],
        "quotemark": [ true, "single", "jsx-double" ],
        "ordered-imports": false,
        "interface-name": false,
        "trailing-comma": [
          true, {
            "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          }
        }
      ],
      "import-spacing": true
    },
    "rulesDirectory": []
}
