{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-no-unused-expression-chai"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [ true, "never" ],
        "quotemark": [ true, "single", "jsx-double" ],
        "ordered-imports": false,
        "interface-name": false,
        "interface-over-type-literal": false,
        "no-unused-variable": true,
        "trailing-comma": [
          true, {
            "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          }
        }
      ],
      "max-line-length": [ true, 420 ],
      "import-spacing": true,
      "no-console": false,
      "no-var-requires": false,
      "no-shadowed-variable": [
        true,
        {
          "class": true,
          "enum": true,
          "function": true,
          "import": false,
          "interface": true,
          "namespace": true,
          "typeAlias": true,
          "typeParameter": true
        }
      ]
    },
    "rulesDirectory": []
}
