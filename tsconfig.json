{
  "compilerOptions": {
    "diagnostics": true,
    "allowJs": true,
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "ActionTypes": [ "src/constants/actionTypes" ],
      "Actions": [ "src/actions" ],
      "Reducers": [ "src/reducers" ],
      "Selectors": [ "src/selectors" ],
      "Sagas": [ "src/sagas" ],
      "Store": [ "src/store" ],
      "History": [ "src/history" ],
      "Routes": [ "src/routes" ],
      "Utils": [ "src/utils" ],
      "Api": [ "src/api" ],

      "Components": [ "src/components" ],
      "Components/*": [ "src/components/*" ],
      "Containers": [ "src/containers" ],
      "Containers/*": [ "src/containers/*" ],
      "Styles": [ "src/styles" ],
      "Styles/*": [ "src/styles/*" ]
    }
  },
  "exclude": [
    "**/*.test.ts*",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "useBabel": true,
    "useCache": true
  }
}
